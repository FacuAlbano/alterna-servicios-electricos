  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://alterna2.vercel.app/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_includes": true,
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "features": [
    "Cross Platform",
    "fast",
    "simple"
  ],
  "protocol_handlers": [
    {
      "protocol": "mailto",
      "url": "/contacto?email=%s"
    },
    {
      "protocol": "tel", 
      "url": "tel:+5493413856810"
    }
  ],
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".svg"],
        "application/pdf": [".pdf"],
        "text/plain": [".txt"],
        "application/vnd.ms-excel": [".xls", ".xlsx"]
      }
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text", 
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", ".pdf", ".doc", ".docx"]
        }
      ]
    }
  },
  "capture_links": "new-client",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "display_override": [
    "window-controls-overlay",
    "minimal-ui"
  ]
}
